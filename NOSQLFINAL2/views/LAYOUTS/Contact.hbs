<div class="form-page" style="font-family: 'Montserrat', sans-serif;">
	   {{if fail}}
<button type="button" class="btn btn-danger">{{ FAILED! }}</button>
	{{/if}}
<div class="row"  style="text-align: center">
		<div class="col-md-12 col-xs-12">
			<h1>PLEASE CONTACT ME</h1>
		</div>
<div class="col-md-12 col-xs-12">
			<h5> EMAIL AND FIRST NAME ONLY </h5>
		  </div>
</div>
	<form name="Contactform" id="CONTACT" action="/CONTACT" method="POST">
<div class="row" style="text-align: center; margin-top: 10px;">
			<div class="col-md-3 col-xs-0"></div>
<div class="col-md-3 col-xs-12">
				<div class="form-group">
					<input class="contact-control" type="text" id="Firstname" name="Firstname" placeholder="ENTER FIRST NAME" required/>
 				</div>
			</div>
		<div class="row">
			<div class="col-md-4 col-xs-0"></div>
			<div class="col-md-4 col-xs-12">
				<div class="form-group">
					<input class="contact-control" type="text" id="Email" name="email" placeholder="ENTER EMAIL" required/>
 				</div>
			</div>
			<div class="col-md-4 col-xs-0"></div>
			<div class="col-md-12 col-xs-12" style="text-align: center;"><button type="submit" value="submit"  class="btn btn-dark" style="background-color: #000000;">Submit</button></div>
		</div>
	</form>
</div>
